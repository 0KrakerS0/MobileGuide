<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/object_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_margin="5dp"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/object_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa obiktu"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/object_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Typ obiektu" />

        <TextView
            android:id="@+id/object_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa Miasta" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleX="0.25"
            android:scaleY="0.25"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:id="@+id/object_rating" />
    </LinearLayout>
</LinearLayout>